generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model monsters {
  id     Int             @id @default(autoincrement())
  name   String          @db.VarChar(30)
  rank   monsters_rank
  size   monsters_size
  family monsters_family
  hp     Int
  mp     Int
  atk    Int
  def    Int
  agi    Int
  int    Int
  recipe String          @db.VarChar(90)
  skill  String          @db.VarChar(30)
}

enum monsters_rank {
  F
  E
  D
  C
  B
  A
  S
  SS
}

enum monsters_size {
  S
  M
  G
  U
}

enum monsters_family {
  Slime
  Nature
  Beast
  Material
  Undead
  Devil
  Dragon
  Break
  Unknown
}
